<svg
	height='720'
	width='1280'
	xmlns:inkscape='http://www.inkscape.org/namespaces/inkscape'
	xmlns:sodipodi='http://sodipodi.sourceforge.net/DTD/sodipodi-0.dtd'
	xmlns:xlink='http://www.w3.org/1999/xlink'
	xmlns='http://www.w3.org/2000/svg'>

<%options = {subheader_x: 30, place_x: 40, name_x: 240, item_spacing: 50 }%>	
<%options[:spacer] = (5 - @entries) * 30%>
<%options[:content_end_y] = 115 + (options[:item_spacing] * 2 * @entries) + (options[:spacer] * @entries)%>

	<sodipodi:namedview
		bordercolor='#e32966'
		borderlayer='true'
		borderopacity='1'
		inkscape:cx='561.37712'
		inkscape:cy='360'
		gridtolerance='10'
		guidetolerance='10'
		id='namedview30'
		objecttolerance='10'
		pagecolor='#ffffff'
		inkscape:pageopacity='0'
		inkscape:pageshadow='2'
		showgrid='true'
		showguides='true'
		inkscape:current-layer="layer2"
		inkscape:showpageshadow='true'
		inkscape:window-height='756'
		inkscape:window-maximized='1'
		inkscape:window-width='1276'
		inkscape:window-x='4'
		inkscape:window-y='0'
		inkscape:zoom='0.5'>

		<inkscape:grid
			dotted='true'
			empspacing='5'
			enabled='true'
			id='grid3033'
			snapvisiblegridlinesonly='true'
			spacingx='5px'
			spacingy='5px'
			type='xygrid'
			visible='true'/>
		<sodipodi:guide
			id='guide3807'
			orientation='720,0'
			position='30,720'/>
		<sodipodi:guide
			id='guide3811'
			orientation='0,1450'
			position='-100,620'/>
	</sodipodi:namedview>

	<g
		inkscape:groupmode="layer"
		id="layer1"
		inkscape:label="background">
		<image height='720' xlink:href='backgrounds/empty.png' id='background_picture' width='1280' x='0' y='0'/>
	</g>
	
	<g
	inkscape:groupmode="layer"
	id="layer2"
	inkscape:label="text">
  
  	<text
		fill='#ffffff'
		font-family='Franklin Gothic Heavy'
		font-size='70'
		font-weight='normal'
		id='header'
		sodipodi:linespacing='125%'
		stroke='#000000'
		stroke-width='2'
		text-anchor='start'
		x='30'
		y='100'><tspan
				sodipodi:role='line'><tspan><%=ERB::Util.h @header%></tspan>
			</tspan>
		</text>
		<% index = 0 %>
		<% @data.each do |i|%>
		<% _y = options[:content_end_y] - (index * options[:item_spacing]) - ((index / 2) * options[:spacer])%>
		<%if i[:place]%>
		<text
			fill='#ffd700'
			font-family='Franklin Gothic Heavy'
			font-size='45'
			font-weight='normal'
			id='event_time<%=index%>'
			sodipodi:linespacing='125%'
			stroke='#000000'
			stroke-width='2'
			text-anchor='start'
			x='<%=options[:place_x]%>'
			y='<%=_y %>'><tspan 
				sodipodi:role='line'><tspan><%=ERB::Util.h i[:place]%></tspan>
			</tspan>
		</text>
		<%else%>
		<text
			fill='#ffffff'
			font-family='Franklin Gothic Heavy'
			font-size='40'
			font-weight='normal'
			id='event_time<%=index%>'
			sodipodi:linespacing='125%'
			stroke='#000000'
			stroke-width='2'
			text-anchor='start'
			x='<%=options[:place_x]%>'
			y='<%=_y %>'><tspan 
				sodipodi:role='line'><tspan><%=ERB::Util.h i[:pts]%></tspan>
			</tspan>
		</text>
		<%end%>
	   <flowRoot 
			id="event_name<%=index%>"
			style="font-size:45px;font-style:normal;font-weight:normal;line-height:125%;letter-spacing:0px;word-spacing:0px;font-family:Franklin Gothic Heavy;-inkscape-font-specification:Franklin Gothic Heavy"
			text-anchor='start'><flowRegion
				id="flowRegion<%=index%>"><rect
					id="rect<%=index%>"
					width="<%=1280 - options[:name_x] - 10%>"
					height="60"
					x="<%=options[:name_x]%>"
					y="<%=_y - 45%>"
					text-anchor="start"/></flowRegion><flowPara
				id="flowPara<%=index%>"
				style="stroke:#000000;stroke-width:2;fill:#ffffff"><%=ERB::Util.h i[:name]%></flowPara>
		</flowRoot>
		<% index += 1%>
	<%end%>
	</g>

<metadata id='metadata1'>340!http://isk:Kissa@isk0.asm.fi</metadata></svg>
