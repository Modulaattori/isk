<svg
	height='720'
	width='1280'
	xmlns:inkscape='http://www.inkscape.org/namespaces/inkscape'
	xmlns:sodipodi='http://sodipodi.sourceforge.net/DTD/sodipodi-0.dtd'
	xmlns:xlink='http://www.w3.org/1999/xlink'
	xmlns='http://www.w3.org/2000/svg'>

<%options = {subheader_x: 30, time_x: 60, item_name_x: 230, content_start_y: 190, item_spacing: 60 }%>	

	<sodipodi:namedview
		bordercolor='#e32966'
		borderlayer='true'
		borderopacity='1'
		inkscape:cx='561.37712'
		inkscape:cy='360'
		gridtolerance='10'
		guidetolerance='10'
		id='namedview30'
		objecttolerance='10'
		pagecolor='#ffffff'
		inkscape:pageopacity='0'
		inkscape:pageshadow='2'
		showgrid='true'
		showguides='true'
		inkscape:current-layer="layer2"
		inkscape:showpageshadow='true'
		inkscape:window-height='756'
		inkscape:window-maximized='1'
		inkscape:window-width='1276'
		inkscape:window-x='4'
		inkscape:window-y='0'
		inkscape:zoom='0.5'>

		<inkscape:grid
			dotted='true'
			empspacing='5'
			enabled='true'
			id='grid3033'
			snapvisiblegridlinesonly='true'
			spacingx='5px'
			spacingy='5px'
			type='xygrid'
			visible='true'/>
		<sodipodi:guide
			id='guide3807'
			orientation='720,0'
			position='30,720'/>
		<sodipodi:guide
			id='guide3811'
			orientation='0,1450'
			position='-100,620'/>
	</sodipodi:namedview>

	<g
		inkscape:groupmode="layer"
		id="layer1"
		inkscape:label="background">
		<image height='720' xlink:href='backgrounds/empty.png' id='background_picture' width='1280' x='0' y='0'/>
	</g>
	
	<g
	inkscape:groupmode="layer"
	id="layer2"
	inkscape:label="text">
  
  	<text
		fill='#ffffff'
		font-family='Franklin Gothic Heavy'
		font-size='70'
		font-weight='normal'
		id='header'
		sodipodi:linespacing='125%'
		stroke='#000000'
		stroke-width='2'
		text-anchor='start'
		x='30'
		y='100'><tspan
				sodipodi:role='line'
				xml:space='preserve'
				x='30'><tspan><%=@header%></tspan>
			</tspan>
		</text>
		<% index = 0 %>
		<% @items.each do |i|%>
			<%if i[:subheader]%>
		<text
			fill='#ffffff'
			font-family='Franklin Gothic Heavy'
			font-size='56'
			font-weight='normal'
			id='date_header<%=index%>'
			sodipodi:linespacing='125%'
			stroke='#FF0000'
			stroke-width='2'
			text-anchor='start'
			x='<%=options[:subheader_x]%>'
			y='<%=options[:content_start_y] + (index * options[:item_spacing])%>'><tspan 
				sodipodi:role='line'
				xml:space='preserve'><tspan><%=i[:subheader]%></tspan>
			</tspan>
		</text>
		<%else%>
		<text
			fill='#ffffff'
			font-family='Franklin Gothic Heavy'
			font-size='56'
			font-weight='normal'
			id='event_time<%=index%>'
			sodipodi:linespacing='125%'
			stroke='#000000'
			stroke-width='2'
			text-anchor='start'
			x='<%=options[:time_x]%>'
			y='<%=options[:content_start_y] + (index * options[:item_spacing])%>'><tspan 
				sodipodi:role='line'
				xml:space='preserve'><tspan><%=i[:time]%></tspan>
			</tspan>
		</text>
	   <flowRoot 
			xml:space="preserve"
			id="event_name<%=index%>"
			style="font-size:56px;font-style:normal;font-weight:normal;line-height:125%;letter-spacing:0px;word-spacing:0px;font-family:Franklin Gothic Heavy;-inkscape-font-specification:Franklin Gothic Heavy"
			text-anchor='start'><flowRegion
				id="flowRegion<%=index%>"><rect
					id="rect<%=index%>"
					width="800"
					height="65"
					x="<%=options[:item_name_x]%>"
					y="<%=options[:content_start_y] + (index * options[:item_spacing]) - 56%>"
					text-anchor="start"/></flowRegion><flowPara
				id="flowPara<%=index%>"
				style="stroke:#000000;stroke-width:2;fill:#ffffff"><%=i[:name]%></flowPara>
		</flowRoot>
		<%end%>
		<% index += 1%>
	<%end%>
	</g>

<metadata id='metadata1'>340!http://isk:Kissa@isk0.asm.fi</metadata></svg>
