<h1>Create new slide</h1>

	<p><b>Create slide online editable slide from:</b></p>

<div id="tabs">
  <ul>
    <li><a href="#simple"><span>Simple Editor</span></a></li>
    <li><a href="#inkscape"><span>Inkscape</span></a></li>
    <li><a href="#httpslide"><span>HttpSlide</span></a></li>
  </ul>
    <div id="simple">
      <h2>Create new simple slide</h2>
      <%=form_for @slide, :url => {:action => :create} do |f|%>

        
      	<%=hidden_field_tag :create_type, 'simple'%>

        <%=render :partial => 'simple_edit'%>
        
        <p>
        <%=f.submit "Create"%>
        </p>
        
      <%end%>

    </div>
    <div id="inkscape">
      <h2>Create new inkscape slide</h2>
      <%=form_for @slide, :url => {:action => :create} do |f|%>
      	<%=f.error_messages%>
      	<%=render :partial => 'form'%>

  		<ul>
  		  <li>
  				<%=radio_button_tag :create_type, 'empty_file', :checked => true%><b>Empty(ish) inkscape file</b>
  			</li>
  		</ul>

  	<%=f.submit "Create"%>
  <%end%>  


    </div>
    <div id="httpslide">
      <h2>Create new http-fetcher slide</h2>
      <p>This slide will be automatically updated every 5 minutes.</p>
      <%=form_for @slide, :url => {:action => :create} do |f|%>
      	<%=f.error_messages%>
      	<%=render :partial => 'form'%>
        <%=hidden_field_tag :create_type, 'http_slide'%>
        <p>
  		        <%=label_tag :url, 'Url:'%>
  		        <%=text_field_tag :url, 'http://'%>
  		  </p>
  		  <p>
  		        <%=label_tag :basic_username, 'Basic auth username:'%>
  		        <%=text_field_tag :basic_username%>
  		  </p>
  		  <p>
  		        <%=label_tag :basic_password, 'Basic auth password (clear):'%>
  		        <%=text_field_tag :basic_password%>
  		  </p>
  	    <%=f.submit "Create"%>
  <%end%>
    </div>
    </div>
    
    