<h1>Information for slide: <%=@slide.name%></h1>
<div class='slideinfo'>
  
<%=render :partial => 'compact_slideitem', :locals => {:s => @slide, :to_full => true}%>

<div class='slide_metadata info_block'>
<h2>Slide metadata</h2>

  <%if @slide.public%>
    <div class="warning">
	    <p>This slide is public.
	      <%if @slide.can_hide? current_user%>
	        You can <%=link_to "hide", {:controller => :slides, :action => :hide, :id => @slide.id}, :method => :post, :class => 'button'%> it.</p>
	      <%end%>
	    </p>
    </div>
  <% else %>
    <div>
	    <p>This slide is hidden won't be shown in any presentations.</p>
    </div>
  <%end%>

  <%if @slide.replaced?%>
	  <div class="warning">
		  <p>This slide has been replaced! The replacement slide is <%=link_to @slide.replacement.name, :action => :show, :id => @slide.replacement.id%>.</p>
	  </div>
  <%elsif @slide.deleted%>
	  <div class="warning">
		  <p>This slide has been deleted.</p>
	  </div>
  <%end%>
  
  <ul>
    <li>Slide class: <%=slide_class @slide%></li>
    <li>Last modified: <%=I18n.l(@slide.updated_at, :format => :short) %></li>
    <li>Images generated? <%=@slide.ready ? 'Yes' : 'No'%></li>
  </ul>
	  	
</div>


<%=render :partial => 'slide_group_info', :locals => {:s => @slide}%>

<%=render :partial => 'slide_presentation_list', :locals => {:s => @slide}%>

<%=render :partial => 'slide_overrides', :locals => {:s => @slide}%>

<%= render :partial => 'shared/authorized_users', :locals => {:obj => @slide}%>
</div>