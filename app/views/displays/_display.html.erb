<div class="display_info <%=display.late? ? 'late' : ''%>" id="display_<%=display.id%>">
    <div class="display_header">
        <%=link_to display.name, {:controller => :displays, :action => :show, :id => display.id}%>
    </div>
    <div class="display_current_slide">
        <%=current_slide_tag(display)%>
    </div>
    <div class="display_metadata">
        <ul>
            <li>Presentation: <%=display.presentation ? link_to(display.presentation.name, :controller => :presentations, :action => :show, :id => display.presentation.id) : 'Not defined'%></li>
            <li>Uptime: <%=display.uptime%></li>
            <li><%=display_ping display%></li>
            <li>Manual mode: <%=display.manual ? 'Yes' : 'No'%></li>
        </ul>
    </div>
    <div class="display_actions">
	    <%=link_to 'Details', {:controller => :displays, :action => :show, :id => display.id}, :class => 'button'%>
	    <%=link_to 'Edit', {:controller => :displays, :action => :edit, :id => display.id}, :class => 'button'%>
		<%=link_to 'Remote control', {:controller => :displays, :action => :dpy_control, :id => display.id}, :class => :button%>
    </div>
    
</div>