<h1>iskdpy remote control interface</h1>
<p>Click on a slide image to make the display jump to that slide.</p>


<div class="display_preview" id="display_preview"></div>

<div class="display_control" id="display_control" data-id="<%=@display.id%>"></div>



<%content_for :navigation do %>
  <%if @display.can_edit? current_user%>
	<%=link_to 'Edit', :action => :edit, :id => @display.id%>
	<%end%>
	
	<%=link_to 'Remote control', :action => :dpy_control, :id => @display.id%>
	
	<%=link_to 'Slide stats', :action => :slide_stats, :id => @display.id%>
<%end%>